            <!-- Crear un section por cada una de las 5 categorias -->
            <div id="subtitle">
                <a href="/products/categories/Arcade">
                    <h2>Arcade</h2>
                </a>
            </div>

            <section id="category">
                <% for( let i=0; i < 5; i++ ) { %>
                    <!-- crear cinco articles, cada uno con un juego perteneciente a la categoría correspondiente -->
                    <article class="category-article">
                        <div>
                            <a href="/products/<%= Arcade[i].id %> ">
                                <img class="responsive-img" src="<%= Arcade[i].logo %> "
                                    alt="Foto producto Indie Game">
                            </a>
                        </div>
                        <div class="detalle">
                            <h3>
                                <a href="/products/<%= Arcade[i].id %> ">
                                    <%= Arcade[i].name %>
                                </a>
                            </h3>
                            <p>
                                $<%= Arcade[i].price %>
                            </p>
                        </div>
                    </article>
